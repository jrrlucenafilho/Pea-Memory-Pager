{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build C++ OOP",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"-Wextra",
				"${file}",
				"classes/*.cpp",
				"-I",
				"headers",
				"-o",
				"${fileBasenameNoExtension}.exe"
